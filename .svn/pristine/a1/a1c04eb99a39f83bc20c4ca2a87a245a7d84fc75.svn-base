/*
* 公共样式加组件
* 张展
* 2018-1-17
*/


/*公共样式*/
*{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
html{
    background: #f5f5f5;
}
h1, h2, h3, h4, h5, h6, em, i{
    font-style: normal;
    font-weight: 400;
}
ul, li {
    list-style: none;
}
a {
    text-decoration: none;
    outline: none;
}
input, select, textarea{
    outline: none;
    -moz-appearance: none;
    -webkit-appearance: none;
    appearance: none;
}
.wrap{
    width: 100%;
    padding: 0.4rem;
    overflow: hidden;
    border-top: 0.01rem solid #e5e5e5;
    border-bottom: 0.01rem solid #e5e5e5;
    margin-bottom: 0.2rem;
    background: #fff;
}

/* 组件 */
h1{
    font-size: 0.32rem;
    line-height: 0.8rem;
    background: #f9f8f9;
    padding: 0 0.4rem;
}
.title{
    font-size: 0.42rem;
    line-height: 0.44rem;
    color: #394043;
}
.title a{
    color: #9c9fa1;
    font-size: 0.24rem;
    float: right;
    padding-right: 0.28rem;
    background: url("../images/index-07.svg") no-repeat right center;
    background-size: 0.24rem;
}

.search{
    width: 100%;
    height: 0.6rem;
    overflow: hidden;
    border: 0.01rem solid #e5e5e5;
    background: #fff;
    border-radius: 0.3rem;
    -webkit-border-radius: 0.3rem;
    display: -webkit-box; /* Chrome 4+, Safari 3.1, iOS Safari 3.2+ */
    display: -webkit-flex; /* Chrome 21+, Safari 6.1+, iOS Safari 7+, Opera 15/16 */
    display: flex;
}
.search .inp{
    flex: 1;
    border: none;
    background: none;
    height: 0.58rem;
    line-height: 0.58rem;
    padding: 0 0.2rem;
    font-size: 0.26rem;
    color: #333;
}
.search .inp::-webkit-input-placeholder{
    color: #9c9fa1;
}
.search .btn{
    width: 0.75rem;
    height: 100%;
    border: none;
    background: url("../images/index-02.svg") no-repeat center;
    background-size: 0.35rem 0.35rem;
}